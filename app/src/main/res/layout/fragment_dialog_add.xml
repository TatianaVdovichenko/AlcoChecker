<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_20">


    <EditText
        android:id="@+id/fga_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:hint="Name"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fga_power"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:hint="Power"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/fga_name" />

    <EditText
        android:id="@+id/fga_half_life"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:hint="Half life"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/fga_power" />

    <Button
        android:id="@+id/fga_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fga_half_life" />

</androidx.constraintlayout.widget.ConstraintLayout>